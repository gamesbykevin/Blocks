    android:id="@+id/tableGameTimer"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TableRow style="@style/tableRowTimer">
        <ImageView style="@style/imageViewTimer" android:src="@drawable/zero" android:id="@+id/clock1" />
        <ImageView style="@style/imageViewTimer" android:src="@drawable/zero" android:id="@+id/clock2" />
        <ImageView style="@style/imageViewTimer" android:src="@drawable/colon" />
        <ImageView style="@style/imageViewTimer" android:src="@drawable/zero" android:id="@+id/clock3" />
        <ImageView style="@style/imageViewTimer" android:src="@drawable/zero" android:id="@+id/clock4" />
    </TableRow>
</TableLayout>