<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <!-- image background -->
    <ImageView android:id="@+id/image_view_background" style="@style/image_view_background" />

    <TextView
        android:id="@+id/level_select_title"
        style="@style/title_text"
        android:text="@string/level_select_title_text" />

    <GridView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_below="@+id/level_select_title"
        android:id="@+id/levelSelectGrid"
        style="@style/grid_view_level_select" />

    <!-- include splash page -->
    <include layout="@layout/activity_splash" android:id="@+id/layout_splash" android:visibility="gone"/>

</RelativeLayout>
