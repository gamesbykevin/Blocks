<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorTransparent50"
    android:visibility="invisible"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView style="@style/title_text" android:text="@string/exit_level_confirm" />

    <TableLayout
        android:background="@drawable/game_ui_background"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_width="400dp"
        android:layout_height="250dp">

        <TableRow android:gravity="center" android:layout_gravity="center">
            <ImageView style="@style/overlay_image_view_confirm" android:src="@drawable/confirm_yes" android:onClick="confirmYes" />
            <ImageView style="@style/overlay_image_view_confirm" android:src="@drawable/confirm_no" android:onClick="confirmNo" />
        </TableRow>

    </TableLayout>

</RelativeLayout>