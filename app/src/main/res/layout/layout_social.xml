<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TableLayout android:layout_width="wrap_content" android:layout_height="wrap_content">

        <TableRow>

            <ImageView style="@style/image_view_social" android:src="@drawable/twitter" />
            <ImageView style="@style/image_view_social" android:src="@drawable/facebook" />
            <ImageView style="@style/image_view_social" android:src="@drawable/youtube" />
            <ImageView style="@style/image_view_social" android:src="@drawable/instagram" />

        </TableRow>

    </TableLayout>

</RelativeLayout>